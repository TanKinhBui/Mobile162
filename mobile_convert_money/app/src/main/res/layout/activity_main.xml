        app:layout_constraintTop_toBottomOf="@+id/listview_item"
        app:layout_constraintVertical_bias="0.384"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
